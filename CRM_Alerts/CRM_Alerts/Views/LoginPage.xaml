<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CRM_Alerts.Views.LoginPage"
    BindingContext="{Binding Main, Source={StaticResource Locator}}"
    Title="Inicio de Sesion">
    
    <ContentPage.Content>
        <ScrollView BindingContext="{Binding Login}">

            <StackLayout Padding="25">

            <Image Source="Login_A" WidthRequest="60"> </Image>

            <Grid Margin="10,0" VerticalOptions="CenterAndExpand">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" VerticalOptions="Center" Text="E-Mail"> </Label>

                <Entry Grid.Row="0" Grid.Column="1" Placeholder="Ingrese su credencial" Keyboard="Email" Text="{Binding Email, Mode=TwoWay}"></Entry>

                <Label Grid.Row="1" Grid.Column="0" VerticalOptions="Center" Text="Contraseña"></Label>

                <Entry Grid.Row="1" Grid.Column="1" IsPassword="true" Placeholder="Ingrese su contraseña" Text="{Binding Pass, Mode=TwoWay}"></Entry>

            </Grid>
            
            <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand">
            
                <Label Text="Recordarme" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"></Label>
                
                <Switch HorizontalOptions="Center" VerticalOptions="CenterAndExpand" IsToggled="{Binding IsRemembered, Mode=TwoWay }"></Switch>

            </StackLayout>

                <ActivityIndicator IsRunning="{Binding Loading, Mode=TwoWay}" VerticalOptions="CenterAndExpand"></ActivityIndicator>

            <StackLayout Margin="65,0" VerticalOptions="CenterAndExpand">

                <Button BackgroundColor="DarkCyan" BorderRadius="23" Command="{Binding LoginCommand}" HeightRequest="46" Text="Ingresar" TextColor="WhiteSmoke" HorizontalOptions="FillAndExpand" ></Button>

            </StackLayout>
        
        </StackLayout>
            
        </ScrollView>
        
    
    </ContentPage.Content>

</ContentPage>